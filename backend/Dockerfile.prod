FROM node:18-alpine

WORKDIR /app

# Copy only package files first for better caching
COPY package*.json ./

# Use npm ci for cleaner, faster installs in Docker
RUN npm ci

# Copy source code
COPY . .

# Build TypeScript into JS in /dist
RUN npm run build

# Remove dev dependencies for smaller final image
RUN npm prune --production

# Expose backend port
EXPOSE 3000

# Start production build
CMD ["node", "dist/index.js"]
